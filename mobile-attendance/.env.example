# Firebase Configuration (from Firebase Console → Project Settings)
VITE_FIREBASE_API_KEY=your-api-key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789
VITE_FIREBASE_APP_ID=1:123456789:web:abcdef

# Campus geofence — students must be within RADIUS metres to clock in
# Defaults: BINUS School Simprug, 200m radius
VITE_CAMPUS_LAT=-6.2307
VITE_CAMPUS_LNG=106.7865
VITE_CAMPUS_RADIUS=200

# BINUS School API (server-side only, used by /api/binus-attendance)
BINUS_API_KEY=your-base64-api-key
BINUS_USER_ACTION=TEACHER7

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Face descriptors – read-only for the mobile app
    match /face_descriptors/{studentId} {
      allow read: if true;
      allow write: if false;
    }

    // Student metadata – read-only
    match /students/{studentId} {
      allow read: if true;
      allow write: if false;
    }

    match /student_metadata/{studentId} {
      allow read: if true;
      allow write: if false;
    }

    // Attendance records – read & write for clock-in
    match /attendance/{date} {
      allow read: if true;
      allow write: if true;

      match /records/{studentId} {
        allow read: if true;
        allow write: if true;
      }
    }

    // Deny everything else by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

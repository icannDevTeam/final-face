rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Face descriptors – only authenticated admin SDK can write;
    // mobile app reads require Firebase Auth
    match /face_descriptors/{studentId} {
      allow read: if request.auth != null;
      allow write: if false;
    }

    // Student metadata – read-only, require auth
    match /students/{studentId} {
      allow read: if request.auth != null;
      allow write: if false;
    }

    match /student_metadata/{studentId} {
      allow read: if request.auth != null;
      allow write: if false;
    }

    // Attendance records – authenticated read & write for clock-in
    // Write validation: must include required fields
    match /attendance/{date} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;

      match /records/{studentId} {
        allow read: if request.auth != null;
        allow write: if request.auth != null
          && request.resource.data.keys().hasAll(['name', 'status', 'timestamp'])
          && request.resource.data.status in ['Present', 'Late'];
      }
    }

    // Deny everything else by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
